<h1>All Reserves</h1>
</br>
<p>Click the reserve name for reserve info page.</p>
</br>
<% @locations.each do |location| %>
<% if location.name != "Rescue Center" %>
<h3><a class="no_decoration name_link" href="/rescue_center/locations/each/<%= location.id() %>"> <%= location.name() %> </a></h3>
<p><%= location.caters_for() %></p>
<table>
  <thead>
    <th>Name</th>
    <th>Species</th>
    <th>Terrain Type</th>
    <th>Age</th>
    <th>Size</th>
    <th>Gender</th>
    <th>Colour</th>
  </thead>
  <% location.animals.each do |animal| %>
      <tbody>
        <td> <a class="name_link" href="/rescue_center/animals/each/<%= animal.id() %>"> <%= animal.name() %> </a></td>
        <td><%= animal.species() %></td>
        <td><%= Terrain_type.find_id(animal.type_id).terrain() %></td>
        <td><%= animal.age() %></td>
        <td><%= animal.size() %></td>
        <td><%= animal.sex() %></td>
        <td><%= animal.colour() %></td>
      </tbody>
  <% end %>
</table>
</br>
<% end %>
<% end %>
