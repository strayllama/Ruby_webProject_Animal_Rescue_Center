<h1>All Reserves</h1>
<p>Click the reserve name for reserve info page.</p>
</br>
<% @locations.each do |location| %>
<% if location.name != "Rescue Center" %>
<h3><a class="no_decoration" href="/rescue_center/locations/each/<%= location.id() %>"> <%= location.name() %> </a></h3>
<table>
  <thead>
    <th>Name</th>
    <th>Species</th>
    <th>Age</th>
    <th>Size</th>
    <th>Gender</th>
    <th>Colour</th>
  </thead>

  <% @animals.each do |animal| %>

    <% if (location.id() == animal.location_id()) %>
      <tbody>
        <td> <a class="no_decoration" href="/rescue_center/animals/each/<%= animal.id() %>"> <%= animal.name() %> </a></td>
        <td><%= animal.species() %></td>
        <td><%= animal.age() %></td>
        <td><%= animal.size() %></td>
        <td><%= animal.sex() %></td>
        <td><%= animal.colour() %></td>
      </tbody>
    <% end %>
  <% end %>
</table>
</br>
<% end %>
<% end %>
