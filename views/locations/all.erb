<section>
<h2>All Reserves</h2>
</br>
  <table>
    <thead>
      <th>Name</th>
      <th>Description</th>
      <th>Land</th>
      <th>Tree-top</th>
      <th>Aquatic</th>
    </thead>
    <% @locations.each do |location| %>
    <tbody>
      <th> <a class="no_decoration" href="/rescue_center/locations/each/<%= location.id() %>"> <%= location.name() %> </a></th>
      <th><%= location.description() %></th>
      <th><%= location.land() %></th>
      <th><%= location.tree_top() %></th>
      <th><%= location.aquatic() %></th>
    </tbody>
    <% end %>
  </table>
</section>
